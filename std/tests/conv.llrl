(import "std/conv" _)
(println! "std/tests/conv")

(assert-eq? (conv #t) #t)

(assert-eq? (conv 100 {I8}) 100 {I32})
(assert-eq? (conv -99 {I8}) -99 {I32})
(assert-eq? (conv 100 {I8}) 100 {U8})
(assert-eq? (conv -1 {I8}) 255 {U8})
(assert-eq? (conv -1 {I8}) 65535 {U16})
(assert-eq? (conv -1 {I8}) -1 {F32})
(assert-eq? (conv 100 {I32}) 100 {I8})
(assert-eq? (conv -100 {I32}) -100 {I8})
(assert-eq? (conv 257 {I32}) 1 {U8})
(assert-eq? (conv -100000 {I32}) -100000 {F64})
(assert-eq? (conv 255 {U8}) -1 {I8})
(assert-eq? (conv 255 {U8}) 255 {I16})
(assert-eq? (conv 30000 {U16}) 30000 {I16})
(assert-eq? (conv 60000 {U16}) 60000 {F64})
(assert-eq? (conv 257 {U32}) 1 {U8})
(assert-eq? (conv 1 {U32}) 1 {U64})
(assert-eq? (conv -1234 {F32}) -1234 {F64})
(assert-eq? (conv -1234 {F64}) -1234 {F32})
(assert-eq? (conv 200 {F64}) 200 {U8})
(assert-eq? (conv -100 {F64}) -100 {I8})
(assert-eq? (conv 1000000 {F64}) 1000000 {U32})
(assert-eq? (conv 1000000 {F64}) 1000000 {I32})
